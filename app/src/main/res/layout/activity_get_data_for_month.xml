<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/arrow_back3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/navbar___left"
        android:background="@android:color/transparent"/>

    <Spinner
        android:id="@+id/spinnerMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/input_selector"/>

    <EditText
        android:id="@+id/etYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:inputType="number"
        android:digits="0123456789"
        android:maxLength="4"
        android:hint="@string/edittextYear"/>

    <Button
        android:id="@+id/buttonLoadData"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/buttonLoadData"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/noDataForMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alertNoDataForMonth"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/error_text"
        android:visibility="invisible"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/getDataForMonthResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="2dp"
        android:visibility="invisible"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        tools:background="@android:color/darker_gray">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/pointsForMonth"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/edittextPointsForMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            tools:text="Colvo-tocheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/cargoWeightForMonth"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/edittextTotalWeightMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            tools:text="Ves za den"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/AdditionalPointsForMonth"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/edittextAdditionalPointsMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            tools:text="additPoint"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/TotalJobCostMonth"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalJobPaidMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            tools:text="zarplata" />

    </LinearLayout>
</LinearLayout>